<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.electroninc.tictactoe.SetupActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@color/translucentWhite"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        tools:ignore="ContentDescription" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:text="@string/select_grid_size"
                android:textAppearance="?android:textAppearanceLarge" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/grid3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/_3_x_3"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/grid4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/_4_x_4"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/grid5"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/_5_x_5"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/grid6"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/_6_x_6"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/grid7"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/_7_x_7"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/grid8"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/_8_x_8"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/grid9"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/_9_x_9"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/grid10"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/_10_x_10"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>